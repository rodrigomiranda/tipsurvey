{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Survey</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ entity.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('survey') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('survey_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
      <li>
        <a href="{{ path('question', {'survey' : entity.id } ) }}">
            Create a Question
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
